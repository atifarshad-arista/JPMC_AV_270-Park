---
exclude_paths:
  - .venv/
  - .ansible/
  - .gitlab-ci.yml
  - .cache
  - "**/inventory/intended"

mock_roles:
  - arista.avd.eos_designs
  - arista.avd.eos_cli_config_gen
  - arista.avd.cvp_configlet_upload
  - arista.avd.eos_config_deploy_cvp
  - arista.cvp.dhcp_configuration
  - arista.avd.eos_validate_state

skip_list:
  - yaml[line-length]
  - yaml[brackets]
  - var-naming[no-role-prefix]
